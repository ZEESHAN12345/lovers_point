<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeeshan.LoversPoint">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".page_splash"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".page1">
        </activity>
        <activity
            android:name=".page1_signup"
            android:label="@string/title_activity_page1_signup"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".page1_signin"
            android:label="@string/title_activity_page1_signin"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".page1_signup_profile">
        </activity>
        <activity
            android:name=".page_hotel">
        </activity>

    </application>

</manifest>
